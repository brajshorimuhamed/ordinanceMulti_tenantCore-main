@model ordinanceMulti_tenantCore.Web.ViewModels.Orinances.AddViewModel

@{
    ViewData["Title"] = "AddOrdinance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="color: darkred">AddOrdinance</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddOrdinance">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ordinance_Name" class="control-label"></label>
                <input asp-for="Ordinance_Name" placeholder="Enter name" class="form-control" />
                <span asp-validation-for="Ordinance_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sector" class="control-label"></label>
                <select asp-for="Sector" class="form-control">
                    <option value="#">Zgjedh sektorin</option>

                    <option>Publik</option>
                    <option>Privat</option>
                </select>
                <span asp-validation-for="Sector" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ordinance_Address" class="control-label"></label>
                <input asp-for="Ordinance_Address" class="form-control" />
                <span asp-validation-for="Ordinance_Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Ordinance" class="btn btn-success" />
                <input type="reset" value="Clear" class="btn btn-danger"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

